@model MyWebshop.Models.Produkter

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form method="post" action="/Admin/Edit">
    <div class="form-horizontal">
        <h4>EDIT</h4>
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                <input type="hidden" value="@Model.Namn" name="name" />
                <input type="text" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="hidden" value="@Model.Pris" name="pris" />
                <input type="number" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Antal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="hidden" value="@Model.Antal" name="antal" />
                <input type="number" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
